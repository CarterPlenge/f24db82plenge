extends layout

block content
  h1= title
  p Welcome to the greatest server ever made: #{title}
  button(type="button", class="btn btn-secondary", onclick="boost()") Sample Button
  div#boost Increase value

  a(href="/boat") View Boat Search Results

  script.
    let value = 0;
    let amt = 3;

    function boost() {
      amt += 1;
      value += amt;
      document.getElementById('boost').innerText = `Boosted ${value} by ${amt}`;
    }

